#zoom
set zoom-step 5
map <C-n> zoom out
map <C-m> zoom in

#clipboard
set selection-clipboard clipboard

set incremental-search "true"

set font "JetBrainsMono NF"

set adjust-open "width"

set window-title-basename "true"

set statusbar-basename "true"

set guioptions none

# colors

set default-bg "#141414"
set default-fg "#f2f2f2"
set recolor-darkcolor "#f2f2f2"
set recolor-lightcolor "#141414"
set highlight-color "#fad7a0"
set highlight-active-color "#99cc99"
set inputbar-bg "#141414"
set inputbar-fg "#f2f2f2"

set recolor true
map i recolor
map <C-Space> toggle_statusbar
