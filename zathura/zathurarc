#zoom
set zoom-step 5
map <C-n> zoom out
map <C-m> zoom in

#clipboard
set selection-clipboard clipboard

set incremental-search "true"

set font "JetBrainsMono NF"

set adjust-open "width"

set window-title-basename "true"

set statusbar-basename "true"

set guioptions none

# colors

set default-bg "#1c1b17"
set default-fg "#e5e0c9"
set recolor-darkcolor "#e5e0c9"
set recolor-lightcolor "#1c1b17"
set highlight-color "#c6b675"
set highlight-active-color "#a0b77c"
set inputbar-bg "#141412"
set inputbar-fg "#e5e0c9"

set recolor true
map i recolor
map <C-Space> toggle_statusbar
